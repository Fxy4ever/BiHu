<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.bihu.Activity.itemTouchActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#4586CA">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/inside_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:text="\u003C"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:text="详情"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="17dp"
                app:cardElevation="2dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_oval="true"
                            android:id="@+id/inside_user_avatar"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                             />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/inside_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:text="Username"
                                android:textColor="#000000"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/inside_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="2018-02-04 16:00:00"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/inside_title"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="10dp"
                        android:text="Test"
                        android:textColor="#000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/inside_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="This is a test"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/inside_fresh_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="2018-02-04 16:54:00更新"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E9E9E8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="right|center"
                        android:orientation="horizontal">

                        <Button
                            android:focusable="false"
                            android:id="@+id/inside_comments"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/comments" />

                        <TextView
                            android:id="@+id/inside_comments_number"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="(0)"
                            android:textSize="13dp" />

                        <Button
                            android:focusable="false"
                            android:id="@+id/inside_good"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/good" />

                        <TextView
                            android:id="@+id/inside_good_number"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="(0)"
                            android:textSize="13dp" />

                        <Button
                            android:focusable="false"
                            android:id="@+id/inside_bad"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/bad" />

                        <TextView
                            android:id="@+id/inside_bad_number"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="(0)"
                            android:textSize="13dp" />

                        <Button
                            android:focusable="false"
                            android:id="@+id/inside_like"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/like" />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp" />
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/inside_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
